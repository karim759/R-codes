# Point Estimation
# Let's estimate the mean of a population
set.seed(123)
sample_data <- rnorm(100, mean = 5, sd = 2)
point_estimate <- mean(sample_data)
print(paste("Point estimate of the mean:", point_estimate))

# Interval Estimation (Confidence Interval)
# Let's calculate a 95% confidence interval for the mean
confidence_interval <- t.test(sample_data, conf.level = 0.95)$conf.int
print(paste("95% Confidence Interval:", confidence_interval))

# Estimating Population Proportion
# Let's estimate the proportion of successes in a population
set.seed(123)
sample_data <- rbinom(100, size = 1, prob = 0.5)
point_estimate <- mean(sample_data)
print(paste("Point estimate of the proportion:", point_estimate))

# Confidence Interval for Proportion
n <- length(sample_data)
p_hat <- point_estimate
se <- sqrt(p_hat * (1 - p_hat) / n)
margin_error <- qnorm(0.975) * se
confidence_interval <- c(p_hat - margin_error, p_hat + margin_error)
print(paste("95% Confidence Interval for proportion:", confidence_interval))
